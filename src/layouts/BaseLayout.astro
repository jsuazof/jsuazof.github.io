---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import { ViewTransitions } from "astro:transitions";

import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../config";

const {
  image,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  includeSidebar = true,
  sideBarActiveItemID,
  ogType,
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="elegant-dark">
  <head>
    <BaseHead title={title} description={description} image={image} , ogType={ogType} />
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} />
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
            <slot />
          </main>
        </div>
        <Footer />
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
    
    <!-- Global Theme Toggle Script -->
    <script is:inline>
      // Global theme toggle functionality
      function initializeTheme() {
        // Get current theme from localStorage or default to 'elegant-dark'
        const currentTheme = localStorage.getItem('theme') || 'elegant-dark';
        
        // Set initial theme
        document.documentElement.setAttribute('data-theme', currentTheme);
        
        // Update icon visibility based on current theme
        function updateIcons(theme) {
          // Update header icons (mobile)
          const darkIconHeader = document.getElementById('theme-toggle-dark-icon');
          const lightIconHeader = document.getElementById('theme-toggle-light-icon');
          
          // Update sidebar icons (desktop)
          const darkIconSidebar = document.getElementById('theme-toggle-dark-icon-sidebar');
          const lightIconSidebar = document.getElementById('theme-toggle-light-icon-sidebar');
          
          if (theme === 'elegant-dark') {
            // Dark mode: show sun icon (click to go light)
            if (darkIconHeader) darkIconHeader.classList.add('hidden');
            if (lightIconHeader) lightIconHeader.classList.remove('hidden');
            if (darkIconSidebar) darkIconSidebar.classList.add('hidden');
            if (lightIconSidebar) lightIconSidebar.classList.remove('hidden');
          } else {
            // Light mode: show moon icon (click to go dark)
            if (darkIconHeader) darkIconHeader.classList.remove('hidden');
            if (lightIconHeader) lightIconHeader.classList.add('hidden');
            if (darkIconSidebar) darkIconSidebar.classList.remove('hidden');
            if (lightIconSidebar) lightIconSidebar.classList.add('hidden');
          }
        }
        
        // Initialize icons
        updateIcons(currentTheme);
        
        // Toggle theme function
        function toggleTheme() {
          const currentTheme = document.documentElement.getAttribute('data-theme');
          const newTheme = currentTheme === 'elegant' ? 'elegant-dark' : 'elegant';
          
          document.documentElement.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
          updateIcons(newTheme);
        }
        
        // Add event listeners to both toggle buttons
        const headerToggle = document.getElementById('theme-toggle');
        const sidebarToggle = document.getElementById('theme-toggle-sidebar');
        
        if (headerToggle) {
          headerToggle.addEventListener('click', toggleTheme);
        }
        
        if (sidebarToggle) {
          sidebarToggle.addEventListener('click', toggleTheme);
        }
      }
      
      // Initialize on page load
      document.addEventListener('DOMContentLoaded', initializeTheme);
      
      // Re-initialize after navigation (for Astro's client-side routing)
      document.addEventListener('astro:page-load', initializeTheme);
    </script>
  </body>
</html>
