---
import ModernLayout from "../layouts/ModernLayout.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
// Obtener los últimos posts del blog (si tienes)
const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),);
const last_posts = posts.slice(0, 3);
---

<ModernLayout activeSection="home">
  <div class="pb-16 mt-8 text-center">
    <div class="text-xl text-gray-600 dark:text-gray-400 mb-2 flex items-center justify-center gap-2">
      <span class="inline-block animate-pulse">●</span>
      <span class="typing-animation">Bienvenido</span>
      <span class="inline-block animate-bounce delay-100">⚡</span>
    </div>
    <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 dark:text-gray-100 mb-4">
      Soy Jorge Suazo
    </h1>
    <h2 class="text-2xl lg:text-3xl font-semibold text-blue-600 dark:text-blue-400 mb-6">
      Cloud Architect & FullStack Developer
    </h2>
    <div class="max-w-3xl mx-auto">
      <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
        Cloud Architect & FullStack Developer con más de 25 años de experiencia en TI.
        Especializado en soluciones cloud escalables en AWS, desarrollo web moderno y
        arquitecturas distribuidas. Vivo en Santiago de Chile y he liderado proyectos
        para empresas de los sectores minero, ingeniería y medios digitales. Mi experiencia combina conocimiento
        técnico profundo con liderazgo estratégico en transformación digital.
      </p>
    </div>
    <div class="flex flex-col sm:flex-row gap-4 mt-10 justify-center">
      <a
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
        href="https://www.linkedin.com/in/jorgesuazof/"
        target="_blank"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
        </svg>
        Conectemos en LinkedIn
      </a>
      <a
        href="https://github.com/jsuazof"
        target="_blank"
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
        </svg>
        Ver mi GitHub
      </a>
      <a
        href="mailto:jsuazof@gmail.com"
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
