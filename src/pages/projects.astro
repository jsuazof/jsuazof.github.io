---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import sqlInteractiveImg from "../assets/images/projects/sqlinteractivo.webp";
import entrevistasImg from "../assets/images/projects/entrevistastecnicas.webp";
import portfolioImg from "../assets/images/itemPreview.webp";
import placeholderImg from "../assets/images/post_img.webp";
---

<BaseLayout title="Proyectos" sideBarActiveItemID="projects">
  <!-- Sección: Proyectos Personales -->
  <div class="text-3xl w-full font-bold mb-5">Proyectos Personales</div>
  <HorizontalCard
    title="SQL Interactivo"
    img={sqlInteractiveImg}
    desc="Sitio web educativo para aprender y practicar consultas SQL con ejemplos interactivos. Ideal para preparar entrevistas técnicas."
    url="https://github.com/jsuazof/sql-interactive"
    target="_blank"
    badge="FullStack"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Entrevistas Técnicas"
    img={entrevistasImg}
    desc="Plataforma con preguntas y ejercicios comunes en entrevistas técnicas de desarrollo. Enfocada en lógica, SQL y buenas prácticas."
    url="https://github.com/jsuazof/entrevistas-tecnicas"
    target="_blank"
    badge="Open Source"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Portafolio Jorge Suazo"
    img={portfolioImg}
    desc="Este portafolio personal, desarrollado con Astro, TailwindCSS y daisyUI. Diseño limpio, responsive y con soporte para CV, blog y proyectos."
    url="https://github.com/jsuazof/jorgesuazocv"
    target="_blank"
    badge="Astro"
  />
  <div class="divider my-0"></div>
  <!-- Sección: Herramientas y Aprendizaje -->
  <div class="text-3xl w-full font-bold mb-5 mt-10">
    Herramientas & Aprendizaje
  </div>
  <HorizontalCard
    title="Notas de Estudio: Java & Spring"
    img={placeholderImg}
    desc="Apuntes y ejemplos prácticos sobre Java, Spring Boot, JPA y Hibernate. Recursos útiles para reforzar conocimientos backend."
    url="https://github.com/jsuazof/java-spring-notes"
    target="_blank"
    badge="Java"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cloud Architecture Playground"
    img={placeholderImg}
    desc="Proyectos de experimentación con AWS, Google Cloud y Oracle Cloud. Automatización, despliegue de APIs y gestión de recursos en la nube."
    url="https://github.com/jsuazof/cloud-playground"
    target="_blank"
    badge="Cloud"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="DevOps Basics"
    img={placeholderImg}
    desc="Configuraciones iniciales con GitHub Actions, CI/CD básico y buenas prácticas para despliegue automatizado de aplicaciones estáticas."
    url="https://github.com/jsuazof/devops-basics"
    target="_blank"
    badge="DevOps"
  />
</BaseLayout>
